<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>toMainPage</from-outcome>
			<to-view-id>/mainPage.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>toLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>toUserHomePage</from-outcome>
			<to-view-id>/userHomePage.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>toIndex</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{mainController.userController.navigationFromLogin}
			</from-action>
			<if>#{mainController.userController.confirmLoginData()}</if>
			<to-view-id>/userHomePage.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>

			<from-outcome>toError</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{mainController.userController.navigationFromLogin}
			</from-action>
			<from-outcome>userHomePage</from-outcome>
			<to-view-id>/userHomePage.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{mainController.userController.navigationFromLogin}
			</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>


	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>
				toAddLink
			</from-outcome>
			<to-view-id>/templates/userHomePage/userHomePageAddLink</to-view-id>

		</navigation-case>

		<navigation-case>
			<from-outcome>
				toShowLinks
			</from-outcome>
			<to-view-id>/templates/userHomePage/userHomePageLinks</to-view-id>

		</navigation-case>
		
			<navigation-case>
			<from-outcome>
				toFavoritLinks
			</from-outcome>
			<to-view-id>/templates/userHomePage/userHomePageFavoritLinks</to-view-id>

		</navigation-case>

	</navigation-rule>


</faces-config>